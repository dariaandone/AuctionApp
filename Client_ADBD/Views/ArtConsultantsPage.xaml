<Page x:Class="Client_ADBD.Views.ArtConsultantsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_ADBD.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ArtConsultantsPage">

    <Grid>


        <ScrollViewer VerticalScrollBarVisibility="Hidden">

            <Grid Margin="20">
                <!-- Define Grid Columns -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- Define Grid Rows -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Rând pentru titlu -->
                    <RowDefinition Height="Auto" />
                    <!-- Rând pentru primele trei persoane -->
                    <RowDefinition Height="Auto" />
                    <!-- Rând pentru următoarele trei persoane -->
                </Grid.RowDefinitions>


                <!-- Header -->
                <TextBlock Text="CONSULTANȚI DE ARTĂ" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Grid.ColumnSpan="3" 
                       Margin="0,30, 0, 50"/>

                <!-- First Profile -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
                    <Image Source="/Views/cezar_burlan.jpg" 
                       Width="150" Height="150" 
                       Stretch="Uniform" />
                    <TextBlock Text="Cezar Burlan" 
                           FontSize="16" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0" />
                    <TextBlock Text="Sales and Art Advisory Director" 
                           FontSize="14" 
                           TextAlignment="Center" />
                    <TextBlock Text="0724 364 838" 
                           FontSize="12" TextAlignment="Center" />
                    <TextBlock Text="cezar.burlan@auctionpro.ro" 
                           FontSize="12" TextAlignment="Center" 
                           Foreground="Blue" />
                </StackPanel>

                <!-- Second Profile -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
                    <Image Source="/Views/mihaela_trifu.jpg" 
                       Width="150" Height="150" 
                       Stretch="Uniform" />
                    <TextBlock Text="Mihaela Trifu" 
                           FontSize="16" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0" />
                    <TextBlock Text="Art Advisor și External Sales Team Director" 
                           FontSize="14" 
                           TextAlignment="Center" />
                    <TextBlock Text="0758 056 119" 
                           FontSize="12" TextAlignment="Center" />
                    <TextBlock Text="mihaela.trifu@auctionpro.ro" 
                           FontSize="12" TextAlignment="Center" 
                           Foreground="Blue" />
                </StackPanel>

                <!-- Third Profile -->
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="10">
                    <Image Source="/Views/irina_milenkovici.jpg" 
                       Width="150" Height="150" 
                       Stretch="Uniform" />
                    <TextBlock Text="Irina Milenkovici" 
                           FontSize="16" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0" />
                    <TextBlock Text="Art Advisor" 
                           FontSize="14" 
                           TextAlignment="Center" />
                    <TextBlock Text="0730 798 054" 
                           FontSize="12" TextAlignment="Center" />
                    <TextBlock Text="irina.milenkovici@auctionpro.ro" 
                           FontSize="12" TextAlignment="Center" 
                           Foreground="Blue" />
                </StackPanel>


                <!-- First Profile -->
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="30">
                    <Image Source="/Views/roxana_dumitru.jpg" 
                    Width="150" Height="150" 
                    Stretch="Uniform" />
                    <TextBlock Text="Roxana Dumitru" 
            FontSize="16" FontWeight="Bold" 
            HorizontalAlignment="Center" 
            Margin="0,10,0,0" />
                    <TextBlock Text="Art Advisor" 
            FontSize="14" 
            TextAlignment="Center" />
                    <TextBlock Text="0757 056 108" 
            FontSize="12" TextAlignment="Center" />
                    <TextBlock Text="roxana.dumitru@auctionpro.ro" 
            FontSize="12" TextAlignment="Center" 
            Foreground="Blue" />
                </StackPanel>

                <!-- Second Profile -->
                <StackPanel Grid.Row="2" Grid.Column="1" Margin="30">
                    <Image Source="/Views/rodica_medrega.jpg" 
        Width="150" Height="150" 
        Stretch="Uniform" />
                    <TextBlock Text="Rodica Medrega" 
            FontSize="16" FontWeight="Bold" 
            HorizontalAlignment="Center" 
            Margin="0,10,0,0" />
                    <TextBlock Text="Senior Art Advisor" 
            FontSize="14" 
            TextAlignment="Center" />
                    <TextBlock Text="0756 056 104" 
            FontSize="12" TextAlignment="Center" />
                    <TextBlock Text="roxana.medrega@auctionpro.ro" 
            FontSize="12" TextAlignment="Center" 
            Foreground="Blue" />
                </StackPanel>

                <!-- Third Profile -->
                <StackPanel Grid.Row="2" Grid.Column="2" Margin="30">
                    <Image Source="/Views/emilia_madalon.jpg" 
        Width="150" Height="150" 
        Stretch="Uniform" />
                    <TextBlock Text="Emilia Madalon" 
            FontSize="16" FontWeight="Bold" 
            HorizontalAlignment="Center" 
            Margin="0,10,0,0" />
                    <TextBlock Text="Art Advisor" 
            FontSize="14" 
            TextAlignment="Center" />
                    <TextBlock Text="0756 056 102" 
            FontSize="12" TextAlignment="Center" />
                    <TextBlock Text="emilia.madalon@auctionpro.ro" 
            FontSize="12" TextAlignment="Center" 
            Foreground="Blue" />
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <Button Name="btnBack" Command="{Binding BackCommand}" Padding="5" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top"  Background="White" BorderThickness="0" Height="53" Width="84">
            <Image Source="undo.png" Width="64" Height="43" />
        </Button>
    </Grid>
</Page>