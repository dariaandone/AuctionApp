<UserControl x:Class="Client_ADBD.Views.UserControl.BookPostControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client_ADBD.Views.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">
    
    
    <Grid Background="Transparent">
        <StackPanel Orientation="Vertical">

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="AN PUBLICARE: " FontSize="12" FontWeight="Bold" />
                <TextBlock Text="{Binding PublicationYear}" FontSize="12" />
            </StackPanel>
            
           <!--<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                 <TextBlock Text="AUTOR: " FontSize="12" FontWeight="Bold" />
                 <TextBlock Text="Mihai Eminescu" FontSize="12" />
           </StackPanel>-->
          
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="EDITURĂ: " FontSize="12" FontWeight="Bold" />
                <TextBlock Text="{Binding Publisher}" FontSize="12" />
            </StackPanel>
          
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="LIMBĂ: " FontSize="12" FontWeight="Bold" />
                <TextBlock Text="{Binding Language}" FontSize="12" />
            </StackPanel>
          
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="NUMĂR PAGINI: " FontSize="12" FontWeight="Bold" />
                <TextBlock Text="{Binding PageCount}" FontSize="12" />
            </StackPanel>
           

        </StackPanel>

    </Grid>
</UserControl>
