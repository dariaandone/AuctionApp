<Page x:Class="Client_ADBD.Views.ParticipateAuctionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_ADBD.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ParticipateAuctionsPage">

    <Grid Background="#F5F5F5">
        <ScrollViewer VerticalScrollBarVisibility="Hidden" Background="White">
            <StackPanel Margin="20">
                <!-- Back Button -->
                <Button Name="btnBack" Padding="5" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding BackCommand}" Background="White" BorderThickness="0" Height="40" Width="65">
                    <Image Source="undo.png" Width="58" Height="36" />
                </Button>
                <!-- Title -->
                <TextBlock Text="Cum particip la licitații?" 
                           FontSize="28" 
                           FontWeight="Heavy" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"
                           FontFamily="Times New Roman" 
                           Foreground="#333" />

                <!-- Header Image -->
                <Image Source="/Views/casa.jpg" Stretch="Uniform" Margin="0,0,0,20" />

                <!-- Section 1 -->
                <TextBlock Text="1. Alege obiectele preferate" 
                           FontSize="20" 
                           FontStyle="Italic"
                           Margin="0,10"
                           FontFamily="Times New Roman" 
                           Foreground="#2E86C1" />
                <TextBlock Text="   Vizitează expoziția noastră sau consultă catalogul online pentru a alege operele care îți plac cel mai mult. Consultanții noștri te pot ghida în alegerea ta." 
                           TextWrapping="Wrap" 
                           FontSize="16" 
                           Margin="0,5,0,15" 
                           FontFamily="Times New Roman" 
                           Foreground="#555" />

                <!-- Section 2 -->
                <TextBlock Text="2. Înregistrează-te" 
                           FontSize="20" 
                           FontStyle="Italic" 
                           Margin="0,10"
                           FontFamily="Times New Roman" 
                           Foreground="#2E86C1" />
                <TextBlock Text="   Pentru a participa la licitații, este necesar să te înregistrezi. Poți face acest lucru online, telefonic sau direct la sediu." 
                           TextWrapping="Wrap" 
                           FontSize="16" 
                           Margin="0,5,0,15" 
                           FontFamily="Times New Roman" 
                           Foreground="#555" />

                <!-- Section 3 -->
                <TextBlock Text="3. Alege metoda de participare" 
                           FontSize="20" 
                           FontStyle="Italic" 
                           Margin="0,10"
                           FontFamily="Times New Roman" 
                           Foreground="#2E86C1" />
                <TextBlock Text="   Poți participa la licitație în sala de licitație, online, telefonic, prin ofertă scrisă sau live bidding. Alege metoda care ți se potrivește cel mai bine." 
                           TextWrapping="Wrap" 
                           FontSize="16" 
                           Margin="0,5,0,15" 
                           FontFamily="Times New Roman" 
                           Foreground="#555" />

                <!-- Section 4 -->
                <TextBlock Text="4. Participă la licitație" 
                           FontSize="20" 
                           FontStyle="Italic" 
                           Margin="0,10"
                           FontFamily="Times New Roman" 
                           Foreground="#2E86C1" />
                <TextBlock Text="   Fii pregătit să licitezi pentru obiectele tale preferate! Consultanții noștri sunt aici pentru a te ajuta pe parcursul procesului." 
                           TextWrapping="Wrap" 
                           FontSize="16" 
                           Margin="0,5,0,15" 
                           FontFamily="Times New Roman" 
                           Foreground="#555" />

                <!-- Section 5 -->
                <TextBlock Text="5. Ridică obiectul câștigat" 
                           FontSize="20" 
                           FontStyle="Italic" 
                           Margin="0,10"
                           FontFamily="Times New Roman" 
                           Foreground="#2E86C1" />
                <TextBlock Text="   După câștigarea licitației, efectuează plata și ridică obiectul direct din locație sau solicită livrarea acestuia." 
                           TextWrapping="Wrap" 
                           FontSize="16" 
                           Margin="0,5,0,15" 
                           FontFamily="Times New Roman" 
                           Foreground="#555" />

                <!-- FAQ Section -->
                <TextBlock Text="Întrebări frecvente" 
                           FontSize="24" 
                           FontStyle="Italic"
                           Margin="0,30,0,10"
                           FontFamily="Times New Roman" 
                           Foreground="#333" />

                <!-- FAQ Items -->
                <TextBlock Text="Care este valoarea minimă pentru o ofertă?" 
                           FontSize="18" 
                           FontStyle="Italic" 
                           Margin="0,10"
                           FontFamily="Times New Roman" 
                           Foreground="#2E86C1" />
                <TextBlock Text="   Oferta minimă este stabilită pentru fiecare obiect și este indicată în catalogul licitației." 
                           TextWrapping="Wrap" 
                           FontSize="16" 
                           Margin="0,5,0,15" 
                           FontFamily="Times New Roman" 
                           Foreground="#555" />
                <TextBlock Text="Pot retrage o ofertă?" 
                           FontSize="18" 
                           FontStyle="Italic"
                           Margin="0,10"
                           FontFamily="Times New Roman" 
                           Foreground="#2E86C1" />
                <TextBlock Text="   Odată plasată, oferta devine angajantă și nu mai poate fi retrasă." 
                           TextWrapping="Wrap" 
                           FontSize="16" 
                           Margin="0,5,0,15" 
                           FontFamily="Times New Roman" 
                           Foreground="#555" />
                <TextBlock Text="Este necesar un depozit?" 
                           FontSize="18" 
                           FontStyle="Italic" 
                           Margin="0,10"
                           FontFamily="Times New Roman" 
                           Foreground="#2E86C1" />
                <TextBlock Text="   Pentru anumite licitații, este posibil să fie solicitat un depozit de garanție." 
                           TextWrapping="Wrap" 
                           FontSize="16" 
                           Margin="0,5,0,15" 
                           FontFamily="Times New Roman" 
                           Foreground="#555" />

                <!-- Contact Section -->
                <TextBlock Text="Ai nevoie de ajutor? Contactează-ne!" 
                           FontSize="24" 
                           FontStyle="Italic" 
                           Margin="0,30,0,10"
                           FontFamily="Times New Roman" 
                           Foreground="#333" />
                <TextBlock Text="Telefon: +40 123 456 789" 
                           FontSize="16" 
                           Margin="0,5,0,5" 
                           FontFamily="Times New Roman" 
                           Foreground="#555" />
                <TextBlock Text="Email: support@auctionpro.ro" 
                           FontSize="16" 
                           Margin="0,5,0,20" 
                           FontFamily="Times New Roman" 
                           Foreground="#555" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>