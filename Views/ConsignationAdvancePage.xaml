<Page x:Class="Client_ADBD.Views.ConsignationAdvancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_ADBD.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConsignationAdvancePage">

    <Grid>
        <!-- Scroll pentru întreaga pagină -->
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <StackPanel>


                <!-- Titlu și subtitlu -->
                <StackPanel Background="White">

                    <TextBlock Text="AVANS LA CONSIGNARE" 
                       FontSize="20" 
                       FontWeight="Bold" 
      
                       HorizontalAlignment="Center" 
                       Foreground="Black" 
                       FontFamily="Times New Roman"
                       Margin="0,70, 0, 90" />

                </StackPanel>

                <!-- Secțiunea principală -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">

                    <StackPanel Width="325" Margin="10, 40, 50, 0">
                        <TextBlock Text="   Consignantul poate solicita un avans la consignare constând într-un procent din valoarea de evaluare a lotului consignat. În situaţia avansului la consignare se va negocia un comision de consignare special, care va lua în calcul riscul neadjudecării, precum şi durata de timp până la data programată pentru vânzarea prin licitaţie."
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   Margin="0,10"
                                   FontFamily="Times New Roman" />

                        <TextBlock Text="   În situaţia în care consignantul a solicitat şi a primit avans la consignare şi acesta retrage lotul din licitaţie/consignaţie, AuctionPro este îndreptăţită să obţină de la consignant o despăgubire convenită prin contract cu fiecare consignatar în parte." 
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   Margin="0,10"
                                   FontFamily="Times New Roman" />

                        <TextBlock Text="   Solicitarea de avans la consignare se face către şeful biroului de consignare şi evaluare." 
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   Margin="0,10"
                                   FontFamily="Times New Roman" />

                    </StackPanel>

                    <StackPanel Width="300" Margin="10">


                        <Image Source="/Views/avans_consignare.jpg" />

                    </StackPanel>

                </StackPanel>
            </StackPanel>


        </ScrollViewer>
        <Button Name="btnBack" Padding="5" Margin="2,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding BackCommand}" Background="White" BorderThickness="0" Height="40" Width="65">
            <Image Source="undo.png" Width="58" Height="36" />
        </Button>

    </Grid>
</Page>